using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class EnemyMovement : MonoBehaviour
{
    public float speed;
    [SerializeField]
    private float Timer;

    public bool MoveRight;

    public GameObject Enemy;
    

    public GameObject[]Enemies;

    public Transform SpawnPointArray;
    
    
    // Start is called before the first frame update
    void Start()
    {
        MoveRight = true;
        
        
    }

    // Update is called once per frame
    void Update()
    {

        if (MoveRight)
        {
            Enemy.transform.Translate(Time.deltaTime * speed, 0, 0);
            Enemy.transform.localScale = new Vector2(6, 6);
            
        }
        else
        {
            Enemy.transform.Translate(Time.deltaTime * -speed, 0, 0);
            Enemy.transform.localScale = new Vector2(-6, 6);
            
        }


        Spawning();



    }


    private void OnCollisionEnter2D(Collision2D collision)
    {

        if (collision.collider.CompareTag("ParedD"))
        {

            MoveRight = false;

        }
        else if (collision.collider.CompareTag("ParedI"))
        {

            MoveRight = true;

        }

        if (collision.collider.CompareTag("EnemigoRSide"))
        {

            MoveRight = false;

        }else if(collision.collider.CompareTag("EnemigoLSide"))
        {

            MoveRight = true;

        }


    }

    void Spawning()
    {

        Timer -= Time.deltaTime;
        if (Timer <= 0f)
        {
            GameObject EnemyClone = Instantiate(Enemy, SpawnPointArray.position, Quaternion.identity) as GameObject;
            Timer = 5f;
            
        }
    }

    
    

}
